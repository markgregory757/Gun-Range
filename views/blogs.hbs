<!DOCTYPE html>
<html lang="en">
  <!-- header -->
  <head>
    <link href="/style.css" type="text/css" rel="stylesheet">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Range Blog</title>
  </head>

  <!-- body -->
  <body>
    {{> header }}

    <h1>Range Reviews</h1>

    {{!-- populate current ranges --}}
    <div class="review" >
      {{#each reviews}}
        {{!-- {{> blogDiv review=this}} --}}
        <div class="review">
          Range: <a href="/details/{{this.rangeId}}">{{this.range}}</a><br>
          Written by: <a href="/personDetails/{{this.reviewerId}}">
          {{this.reviewer}}<br></a>
          {{this.aReview}}
        </div><hr>
      {{/each}}
    </div>

  </body>
</html>