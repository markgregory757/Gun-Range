<div class="form">
    <form action="/addRange" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="{{range.name}}">
      <input type="checkbox" id="membersOnly" name="membersOnly" value="membersOnly">
      <label for="membersOnly"> Members Only?</label><br>
      <br>
      <label for="location">Location:</label>
      <input type="text" id="location" location="location" value="{{range.location}}">
      <br>
      <input type="radio" id="indoor" name="fav_language" value="indoor">
      <label for="indoor">Indoor</label>
      <input type="radio" id="outdoor" name="fav_language" value="outdoor">
      <label for="outdoor">Outdoor</label>
      <input type="radio" id="both" name="fav_language" value="both">
      <label for="both">Both</label> 
      <br>
      <label for="rangePicture">Pictures:</label>
      <input type="file" id="rangePicture" name="rangePicture" value="{{range.image_url}}"> 

      <br>
      <label for="review">Review:</label>
      <textarea id="review" name="review" value="{{range.review}}"></textarea>
    </form>
  </div>
</body>
